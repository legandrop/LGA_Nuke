import hiero.ui

sequence = hiero.ui.activeSequence()
if sequence:
    timeline_editor = hiero.ui.getTimelineEditor(sequence)
    if timeline_editor:
        hiero.ui.setWorkspace("Editing")  # Cambiar al espacio de trabajo que contiene el timeline
        action = hiero.ui.findMenuAction("Zoom to Fit")
        if action:
            action.trigger()
